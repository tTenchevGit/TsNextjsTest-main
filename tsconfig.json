{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Set the base directory for module resolution
    "paths": {
      "styled-components": ["node_modules/styled-components"],
      "~/components": ["./components"],
      "~/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "collections/Card/elements.tsx",
    "collections/Card/Card.tsx",
    "sections/AgencySelection/AgencySelection.tsx",
    "sections/AgencySelection/elements.tsx"
, "components/Typography/SectionBigHeading.jsx", "components/Typography/index.ts", "components/Typography/SectionHeading.jsx", "components/Typography/SectionSubheading.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}
